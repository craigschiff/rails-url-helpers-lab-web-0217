<div>
  <% @students.each do |student| %>
    <div><%= student.first_name + " " + student.last_name %>
      <% if student.active == "true" %>
    <%= "This student is currently active." %>
    <% else %>
      <%= "This student is currently inactive." %>
    <% end %>

    <%= link_to student.to_s, student_path(student) %>
  </div>
  <% end %>
</div>
